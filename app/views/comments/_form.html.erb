<% if current_user.nil? %>
  You need to be a logged-in user to write a comment!
<% else %>
  <%= form_for(@comment) do |f| %>
    <%= f.label 'Title' %>
    <%= f.text_field :title %><br>
    <%= f.date_select :date, :ampm => true, order: [:month, :day, :year] %><br>
    <%= f.text_area :content %><br>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <%= f.submit %>
  <% end %>
<% end %>